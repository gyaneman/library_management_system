<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="555.029" Width="1152.164">
    <Grid Width="Auto" Height="Auto" Margin="0,0,2,0">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" Height="275" Width="Auto" ItemsSource="{Binding Path=books}" AutoGenerateColumns="False" SelectionChanged="dataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" IsReadOnly="True" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" IsReadOnly="True" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" IsReadOnly="True" />
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" IsReadOnly="True" />
                <DataGridTextColumn Header="Series" Binding="{Binding Series}" IsReadOnly="True" />
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" IsReadOnly="True" />
                <DataGridTextColumn Header="Edited" Binding="{Binding EditedAt}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="OpenBookCreationWindowButton" Content="New Book" HorizontalAlignment="Left" Margin="84,333,0,0" VerticalAlignment="Top" Width="75" Click="OpenBookCreationWindowButton_Click"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="148,394,0,0" VerticalAlignment="Top" Width="76" Click="LoginButton_Click"/>
        <Label x:Name="labelUserName" Content="Guest" HorizontalAlignment="Left" Margin="10,468,0,0" VerticalAlignment="Top" Height="46" Width="262" FontSize="29.333" FontWeight="Bold"/>

    </Grid>
</Window>
