<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="555.029" Width="775.591">
    <Grid Width="Auto" Height="Auto">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="275" Width="Auto" ItemsSource="{Binding Path=books}"  AutoGenerateColumns="False" SelectionChanged="dataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" />
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" />
                <DataGridTextColumn Header="Series" Binding="{Binding Series}" />
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" />
                <DataGridTextColumn Header="Edited" Binding="{Binding EditedAt}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="openBookCreationWindowButton" Content="New Book" HorizontalAlignment="Left" Margin="84,333,0,0" VerticalAlignment="Top" Width="75" Click="openBookCreationWindowButton_Click"/>

    </Grid>
</Window>
