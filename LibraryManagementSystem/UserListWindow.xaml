<Window x:Class="LibraryManagementSystem.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="UserList" Height="300" Width="500">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" Height="203" Width="Auto" ItemsSource="{Binding Path=users}" AutoGenerateColumns="False" MouseDoubleClick="dataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ButtonCreationNewAccount" Content="CreateNewAccount" HorizontalAlignment="Left" Margin="21,232,0,0" VerticalAlignment="Top" Width="128" Click="ButtonCreationNewAccount_Click"/>

    </Grid>
</Window>
